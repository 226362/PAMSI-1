#include <iostream>

using namespace std;

int main()
{
int* wskaznik;
 int rozmiar;
 int liczba;
 cout<<"podaj liczbe"<<endl;
 cout<<"podaj rozmiar tablicy"<<endl;
 cin>>rozmiar;

 wskaznik = new int[rozmiar];

 if(wskaznik == 0)
   cout<<"nie przydzielilem pamieci!"<<endl;
 else
   {
     cout<<"wypelnij talice"<<endl;
   }
  for(int i=0; i <rozmiar; i++)
     {
      cout<<"POdaj "<<i<<"element tablicy:";
      cin>> wskaznik[i];
      cout<<endl;
     
       }
 cout<<"wpisales: ";
 for(int i = 0;i<rozmiar;i++)
   {
     cout<<wskaznik[i]<<",";
     
   }
 delete[]wskaznik;
 cout<<endl;
return 0;
}
